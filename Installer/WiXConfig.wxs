                            Id="ServiceInstaller"
                            Type="ownProcess"
                            Vital="yes"
                            Name="FAAC CSV Fixer"
                            DisplayName="FAAC CSV Reparaturdienst"
                            Description="Repariert die CSV Dateien fÃ¼r die Kennzeichenerkennung der FAAC"
                            Start="auto"
                            Account="LocalSystem"
                            ErrorControl="ignore"
                            Interactive="no">
                        </ServiceInstall>
                        <ServiceControl Id="StartService" Start="install" Stop="both"
                            Remove="uninstall" Name="FAAC CSV Fixer" Wait="no" />
                    </Component>

                </Directory>
            </Directory>
        </Directory>
    </Product>
</Wix>